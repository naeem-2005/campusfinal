<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2F49"
    tools:context=".ui.activity.projectFragment">

    <FrameLayout
        android:id="@+id/container5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"

                android:orientation="horizontal">

                <Button

                    android:id="@+id/eventbtn2"
                    android:layout_width="84dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/empty_btn_bg"
                    android:text="Events"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <Button
                    android:id="@+id/projectbtn"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/filled_btn_bg"
                    android:text="Projects"
                    android:textColor="#ffffff"
                    android:textSize="16dp"

                    />

                <Button
                    android:id="@+id/communitiesbtn2"
                    android:layout_width="131dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@drawable/empty_btn_bg"
                    android:text="Communities"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/no_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/events"
                android:layout_marginTop="198dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_data_star"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/it_seems_li"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/it_seems_li"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="join now"
                android:id="@+id/joinProject"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#00a3ff"
                android:layout_below="@id/no_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                />

        </RelativeLayout>


    </FrameLayout>
</ScrollView>