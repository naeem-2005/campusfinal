<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2f49"
    tools:context=".ui.home.project.infotech.InfoTechActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="832dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:clipToOutline="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4D000000"
            >

            <RelativeLayout
                android:id="@+id/app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/app2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="320dp"
                        android:layout_height="170dp"
                        android:layout_margin="15dp"
                        app:cardBackgroundColor="#782525"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app2"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="245dp"
                        android:background="#1ab800"
                        android:text="Join"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</ScrollView>